<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medieval Fantasy Adventure Chatbot</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
    <div class="container">
        <h1>Medieval Fantasy Adventure</h1>

        <!-- Avatar Section -->
        <div class="avatar-section">
            <img class="avatar" src="/images/avatar-placeholder.png" alt="Bot Avatar">
        </div>

        <!-- Chat Messages Section -->
        <div id="chatbox" class="chatbox">
            <!-- Bot's welcome message -->
            <% for (let chat of chats) { %>
                <div class="message <%= chat.role === 'assistant' ? 'user-message' : 'bot-message' %>">
                    <p><%= chat.content %></p>
                </div>
            <% } %>
        </div>

        <!-- User Input Section -->
        <form class="input-container" action="./message" method="POST">
            <input type="text" name="message" placeholder="Type your response here..." />
            <button type="submit" id="send-btn">Send</button>
        </form>
    </div>
</body>
</html>